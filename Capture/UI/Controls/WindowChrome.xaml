<UserControl x:Class="Capture.UI.Controls.WindowChrome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls">
    <DockPanel>
        <metro:SystemButtons DockPanel.Dock="Right"
                             WindowChrome.IsHitTestVisibleInChrome="True"
                             VerticalAlignment="Top" />
        <TextBlock Margin="12,8,12,12"
                   FontFamily="Segoe UI Light, Meiryo UI"
                   FontSize="18"
                   Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=metro:MetroWindow}, Path=Title}" />
    </DockPanel>
</UserControl>
